<div class="row">
   <% for(let listing of allListings) { %>
   <div class="cardd">
     <div class="card">
       <a href="/listings/<%= listing._id %>">
         <img src="<%= listing.image.url %>" alt="listing_image" class="card-image" />
       </a>
       <div class="card-body">
         <div class="card-title">
           <a class="titlenames" href="/listings/<%= listing._id %>">
             <h2 class="titlename"> <%= listing.title %> </h2>
           </a>
           <!-- <h2> <%= listing.title %> </h2> -->
           <span class="rating">â˜… 4.87</span>
         </div>
         <p> <b> Location : </b> <%= listing.location %> </p>
         <p> <b> Country : </b> <%= listing.country %> </p>
         <p class="price"> &#x20b9; <%= listing.price.toLocaleString("en-IN")%> <span class="nights"> </span></p>
       </div>
     </div>
     <%  }  %>
</div>


    
